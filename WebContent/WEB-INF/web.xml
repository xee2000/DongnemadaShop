<?xml version="1.0" encoding="UTF-8"?>

<web-app>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:com/command/context/application-context.xml</param-value>
	</context-param>

	<listener>
		<listener-class>com.command.listener.ApplicationContextLoaderListener</listener-class>
	</listener>

	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!-- <filter> <filter-name>loginCheckFilter</filter-name> <filter-class>com.command.filter.LoginCheckFilter</filter-class> 
		<init-param> <param-name>exclude</param-name> <param-value>/common/login.do,/common/logout.do</param-value> 
		</init-param> </filter> <filter-mapping> <filter-name>loginCheckFilter</filter-name> 
		<url-pattern>/*</url-pattern> </filter-mapping> -->

	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>com.command.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>initUrl</param-name>
			<param-value>com/jsp/properties/url.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>


</web-app>